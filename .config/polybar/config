[colors]
red = #fb4934
green = #b8bb26
yellow = #fabd2f
blue = #83a598
purple = #d3869b
aqua = #8ec07c
orange = #fe8019
gray = #928374
bg0 = #32302f
bg1 = #3c3836
bg2 = #504945
bg3 = #665c54
bg4 = #7c6f64
fg0 = #fbf1c7
fg1 = #ebdbb2
fg2 = #d5c4a1
fg3 = #bdae93
fg4 = #a89984

[bar/example]
monitor =
dpi = 120

width = 100%
height = 1.75%

background = ${colors.bg0}
foreground = ${colors.fg1}

border-size = 22
border-bottom-size = 0

font-0 = IBM Plex Mono;3
font-1 = IBM Plex Sans;3
font-2 = FontAwesome5FreeSolid:pixelsize=12;1

modules-left = i3 title
modules-right = memory cpu temperature pulseaudio wlan date

tray-position = none

cursor-click = pointer
cursor-scroll = ns-resize

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 1
label-mode-foreground = ${colors.fg1}
label-mode-background = ${colors.bg0}

label-focused = %index%
label-focused-foreground = ${colors.bg0}
label-focused-background = ${colors.fg4}
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-foreground = ${colors.fg3}
label-unfocused-background = ${colors.bg2}
label-unfocused-padding = 1

label-urgent = %index%
label-urgent-foreground = ${colors.fg1}
label-urgent-background = ${colors.red}
label-urgent-padding = 1

[module/title]
type = internal/xwindow
format-foreground = ${colors.bg0}
format-background = ${colors.fg4}
format-padding = 1
label-maxlen = 32
label-empty = Desktop

[module/cpu]
type = internal/cpu
interval = 2
format-padding = 1
format-foreground = ${colors.fg2}
format-background = ${colors.bg1}
label = %percentage%% cpu

[module/memory]
type = internal/memory
interval = 2
format-padding = 1
format-foreground = ${colors.fg2}
format-background = ${colors.bg1}
label = %percentage_used%% mem

[module/wlan]
type = internal/network
interface = wlp5s0
interval = 3.0
format-connected-padding = 1
format-connected-foreground = ${colors.fg2}
format-connected-background = ${colors.bg3}
format-connected = <label-connected>
label-connected = %essid%
format-disconnected-padding = 1
label-disconnected-foreground = ${colors.bg0}
format-disconnected-background = ${colors.fg4}
format-disconnected = <label-disconnected>
label-disconnected = %ifname% disconnected

[module/date]
type = internal/date
interval = 5
date = %D
time = %I:%M %p
format-padding = 1
format-background = ${colors.fg4}
format-foreground = ${colors.bg0}
label = %time% %date%

[module/pulseaudio]
type = internal/pulseaudio

label-volume = %percentage%% vol

format-volume = <label-volume>
format-volume-padding = 1
format-volume-foreground = ${colors.fg2}
format-volume-background = ${colors.bg2}

label-muted = ïš©
label-muted-foreground = ${colors.gray}

[module/temperature]
type = internal/temperature
hwmon-path = /sys/devices/pci0000:00/0000:00:18.3/hwmon/hwmon1/temp1_input
warn-temperature = 80

label = %temperature-c% temp
label-warm = %temparature-c% temp

format = <label>
format-padding = 1
format-foreground = ${colors.fg2}
format-background = ${colors.bg1}

format-warn = <label-warn>
format-warn-padding = 1
format-warn-background = ${colors.bg1}

[settings]
screenchange-reload = true
pseudo-transparency = true

[global/wm]
margin-top = 0
margin-bottom = 0
