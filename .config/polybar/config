[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

;ws-icon-0 = 1;Δ
;ws-icon-1 = 2;Θ
;ws-icon-2 = 3;Ξ
;ws-icon-3 = 4;Σ
;ws-icon-4 = 5;Φ
;ws-icon-5 = 6;Ψ
;ws-icon-6 = 7;Ω
;ws-icon-7 = 8;δ
;ws-icon-8 = 9;λ

label-mode-padding = 1
label-mode-foreground = #000
label-mode-background = ${colors.background}

label-focused = %index%
label-focused-background = ${colors.background}
label-focused-foreground = ${colors.foreground}
label-focused-underline= ${colors.highlight}
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.foreground}
label-unfocused-underline = ${colors.lowlight}
label-unfocused-padding = 1

label-visible = %index%
label-visible-background = ${colors.background}
label-visible-foreground = ${colors.foreground}
label-visible-underline = ${colors.lowlight}
label-visible-padding = 1

label-urgent = %index%
label-urgent-background = ${colors.background}
label-urgent-underline = ${colors.red}
label-urgent-padding = 1

[module/polypomo]
type = custom/script

exec = ~/.config/polybar/polypomo.py --worktime 1500 --breaktime 300
tail = true

label = %output%
label-underline = ${colors.red}
label-background = ${colors.background}
label-padding = 1
click-left = ~/.config/polybar/polypomo.py toggle
click-right = ~/.config/polybar/polypomo.py end
click-middle = ~/.config/polybar/polypomo.py lock
scroll-up = ~/.config/polybar/polypomo.py time +60
scroll-down = ~/.config/polybar/polypomo.py time -60


[module/title]
type = internal/xwindow
format-foreground = ${colors.foreground}
format-underline = ${colors.blue}
format-padding = 1
format-background = ${colors.background}
label-maxlen = 80
label-empty = Desktop

[module/cpu]
