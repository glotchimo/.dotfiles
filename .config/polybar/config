[colors]
background = #32302f
lowlight = #928374
highlight = #a89984
foreground = #32302f
red = #fb4934
green = #b8bb26
yellow = #fabd2f
blue = #83a598
purple = #d3869b
aqua = #8ec07c
orange = #fe8019

[bar/example]
monitor = ${env:MONITOR:DP-2}
dpi = 120

width = 100%
height = 1.75%

background = #3c3836
foreground = ${colors.foreground}

border-size = 26
border-bottom-size = 0

font-0 = IBM Plex Mono;3
font-1 = IBM Plex Sans;3
font-2 = FontAwesome5FreeSolid:pixelsize=12;1

modules-left = i3 title
modules-right = memory cpu temperature pulseaudio wlan date

tray-position = none

cursor-click = pointer
cursor-scroll = ns-resize

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 1
label-mode-foreground = #000
label-mode-background = ${colors.background}

label-focused = %index%
label-focused-background = ${colors.highlight}
label-focused-foreground = ${colors.foreground}
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-foreground = #ebdbb2
label-unfocused-background = #504945
label-unfocused-padding = 1

label-visible = %index%
label-visible-foreground = #ebdbb2
label-visible-background = #504945
label-visible-padding = 1

label-urgent = %index%
label-urgent-foreground = ${colors.background}
label-urgent-background = ${colors.foreground}
label-urgent-padding = 1

[module/title]
type = internal/xwindow
format-foreground = ${colors.foreground}
format-background = ${colors.blue}
format-padding = 1
label-maxlen = 64
label-empty = Desktop

[module/cpu]
type = internal/cpu
interval = 2
format-padding = 1
format-background = ${colors.orange}
label = %percentage%% cpu

[module/memory]
type = internal/memory
interval = 2
format-padding = 1
format-background = ${colors.yellow}
label = %percentage_used%% mem

[module/wlan]
type = internal/network
interface = wlp5s0
interval = 3.0
format-connected-padding = 1
format-connected-background = ${colors.green}
format-connected = <label-connected>
label-connected = %essid%
format-disconnected-padding = 1
format-disconnected-background = ${colors.notify}
format-disconnected = <label-disconnected>
label-disconnected = %ifname% disconnected
label-disconnected-foreground = ${colors.foreground}

[module/date]
type = internal/date
interval = 5
date = %D
time = %I:%M %p
format-padding = 1
format-background = ${colors.aqua}
label = %time% %date%

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <label-volume>
format-volume-padding = 1
format-volume-background = ${colors.purple}

label-muted = ïš©
label-muted-foreground = ${colors.lowlight}

[module/temperature]
type = internal/temperature
hwmon-path = /sys/devices/pci0000:00/0000:00:18.3/hwmon/hwmon1/temp1_input
warn-temperature = 80

format = <label>
format-padding = 1
format-background = ${colors.red}

format-warn = <label-warn>
format-warn-padding = 1
format-warn-background = ${colors.red}

label = %temperature-c%
label-warn = %temperature-c%

[settings]
screenchange-reload = true
pseudo-transparency = true

[global/wm]
margin-top = 0
margin-bottom = 0
